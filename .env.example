# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=
# Webhook signing secret (from Clerk Webhook endpoint)
CLERK_WEBHOOK_SECRET=
# Cron job secret for background tasks (generate a random string)
CRON_SECRET=

# Admin access (comma-separated)
# e.g., ADMIN_EMAILS=admin@yourdomain.com,ops@yourdomain.com
ADMIN_EMAILS=
# e.g., ADMIN_USER_IDS=usr_123,usr_456 (Clerk user IDs)
ADMIN_USER_IDS=

# Clerk URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard
# Clerk organizations
NEXT_PUBLIC_CLERK_ORGANIZATION_PROFILE_URL=/organization
NEXT_PUBLIC_CLERK_CREATE_ORGANIZATION_URL=/organization/create

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/saas_template

# App URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Optional: Analytics / Pixels
# Google Tag Manager (e.g. GTM-XXXXXXX)
NEXT_PUBLIC_GTM_ID=
# Google Analytics 4 measurement ID (e.g. G-XXXXXXXX)
NEXT_PUBLIC_GA_ID=
# Meta/Facebook Pixel ID (e.g. 1234567890)
NEXT_PUBLIC_FACEBOOK_PIXEL_ID=

# Optional: For payment integration
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# Vercel Blob (file uploads)
# Required to upload attachments to Vercel Blob from the server
BLOB_READ_WRITE_TOKEN=
# Optional overrides (usually not needed):
# BLOB_BASE_URL=https://blob.vercel-storage.com
# BLOB_STORE_ID=your-store-id
# Max upload size in MB (default 25)
BLOB_MAX_SIZE_MB=

# Google Drive backup (dual storage)
GOOGLE_DRIVE_CLIENT_ID=
GOOGLE_DRIVE_CLIENT_SECRET=
GOOGLE_DRIVE_REFRESH_TOKEN=
# PUBLIC_URL controls OAuth redirect and Drive links (default http://localhost:3000)
PUBLIC_URL=http://localhost:3000

# AI Providers (optional)
# Provide the keys for providers you want to use in the AI chat feature
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_GENERATIVE_AI_API_KEY=
MISTRAL_API_KEY=
OPENROUTER_API_KEY=

# Image Generation (required for AI image generation feature)
# Get your API token from: https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=

# Optional: Debug image generation logs
# Set to 1 in development to log provider responses for /api/ai/image
IMAGE_DEBUG=

# Upstash Vector Database (for RAG knowledge base)
# Get these from: https://console.upstash.com/vector
UPSTASH_VECTOR_REST_URL=
UPSTASH_VECTOR_REST_TOKEN=
# Number of relevant chunks to retrieve (default: 5)
RAG_TOP_K=5
# Chunk size in tokens (default: 600)
RAG_CHUNK_SIZE=600
# Overlap between chunks in tokens (default: 100)
RAG_CHUNK_OVERLAP=100

# Social Media Post Scheduling
# Zapier webhook URL for posting to Instagram via Buffer
ZAPIER_WEBHOOK_URL=

# Instagram Analytics & Goal Tracking
# Webhook secret for validating incoming Instagram webhooks from Boost.space
# Generate a secure random string (e.g., openssl rand -hex 32)
INSTAGRAM_WEBHOOK_SECRET=

# Buffer Post Confirmation
# Webhook secret for validating Buffer post confirmation webhooks
# Generate with: openssl rand -hex 32
BUFFER_WEBHOOK_SECRET=

# Later API Integration (https://getlate.dev)
# API key for Later social media scheduling
# Get your API key from: https://app.getlate.dev/settings/api
LATER_API_KEY=
# Webhook secret for validating Later webhooks (generate with: openssl rand -hex 32)
LATER_WEBHOOK_SECRET=
# Feature flag to enable Later integration (set to 'true' to activate)
ENABLE_LATER=false

# Instagram Graph API
# Long-lived Page Access Token from Meta for Developers
# Get it from: https://developers.facebook.com/tools/explorer
# Required permissions: instagram_basic, pages_read_engagement
# See setup guide in /prompts/PLANO_RELATORIO_POSTAGENS.md
INSTAGRAM_ACCESS_TOKEN=

# MVSEP Music Stem Separation
# API key for MVSEP service (automatic percussion separation)
# Get your key from: https://mvsep.com/pt/full_api
MVSEP_API_KEY=BrIkx8zYQbvc4TggAZbsL96Mag9WN5
