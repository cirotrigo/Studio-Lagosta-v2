// =============================================================================
// Music Library for Video Exports
// =============================================================================

model MusicLibrary {
  id           Int     @id @default(autoincrement())
  name         String
  artist       String?
  duration     Float // duração em segundos
  blobUrl      String // URL do arquivo no Vercel Blob
  blobSize     Int // tamanho em bytes
  genre        String? // Rock, Pop, Electronic, etc.
  mood         String? // Happy, Sad, Energetic, Calm, etc.
  isActive     Boolean @default(true)
  isPublic     Boolean @default(true) // futuro: músicas privadas por usuário
  thumbnailUrl String? // capa/artwork da música

  // Instrumental stem (música sem vocais)
  instrumentalUrl     String? // URL do stem instrumental
  instrumentalSize    Int? // Tamanho do arquivo instrumental
  hasInstrumentalStem Boolean   @default(false)
  stemsProcessedAt    DateTime?

  // Vinculação com projeto (opcional - músicas globais não têm projeto)
  projectId Int?
  project   Project? @relation("ProjectMusicLibrary", fields: [projectId], references: [id], onDelete: Cascade)

  // Relacionamento com download do YouTube
  youtubeDownloadJob YoutubeDownloadJob? @relation("YoutubeDownloadMusic")

  // Metadados
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy String? // admin que fez upload

  // Relação com vídeos gerados (audit trail)
  usedInVideos VideoProcessingJob[]

  // Relação com job de processamento
  stemJob MusicStemJob?

  @@index([projectId])
  @@index([genre])
  @@index([mood])
  @@index([isActive, isPublic])
  @@index([hasInstrumentalStem])
}

// =============================================================================
// Music Stem Separation Jobs (MVSEP Integration)
// =============================================================================

model MusicStemJob {
  id      Int          @id @default(autoincrement())
  musicId Int          @unique // Um job por música
  music   MusicLibrary @relation(fields: [musicId], references: [id], onDelete: Cascade)

  // Status do job
  status   String @default("pending") // pending, processing, completed, failed
  progress Int    @default(0) // 0-100

  // MVSEP API
  mvsepJobHash String? // Hash retornado pela API
  mvsepStatus  String? // waiting, processing, done, failed

  // Resultado
  percussionBlobUrl String? // URL temporária antes de mover para MusicLibrary
  error             String? @db.Text

  // Timestamps
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  startedAt   DateTime? // Quando começou o processamento MVSEP
  completedAt DateTime? // Quando finalizou tudo

  @@index([status])
  @@index([mvsepJobHash])
  @@index([createdAt])
}

// =============================================================================
// YouTube Download Queue
// =============================================================================

model YoutubeDownloadJob {
  id         Int     @id @default(autoincrement())
  youtubeUrl String
  youtubeId  String?

  // Metadados fornecidos pelo usuário
  requestedName   String?
  requestedArtist String?
  requestedGenre  String?
  requestedMood   String?
  projectId       Int?
  project         Project? @relation(fields: [projectId], references: [id], onDelete: SetNull)

  // Status: pending → downloading → uploading → completed/failed
  status   String @default("pending")
  progress Int    @default(0)

  // video-download-api.com metadata
  videoApiJobId  String?
  videoApiStatus String?

  // Result
  musicId Int?          @unique
  music   MusicLibrary? @relation("YoutubeDownloadMusic", fields: [musicId], references: [id], onDelete: SetNull)

  // Extra metadata
  title     String?
  duration  Float?
  thumbnail String?

  // Error / retries
  error      String? @db.Text
  retryCount Int     @default(0)

  // Audit
  createdBy String?

  // Timestamps
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  startedAt   DateTime?
  completedAt DateTime?

  @@index([status])
  @@index([youtubeUrl])
  @@index([createdAt])
  @@index([videoApiJobId])
}
