  "crons": [
    {
      "path": "/api/cron/posts",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/cron/verify-stories",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/check-stuck-posts",
      "schedule": "*/10 * * * *"
    },
    {
      "path": "/api/cron/status-sync",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/analytics",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/fetch-later-analytics",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/reminders",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/refill-org-credits",
      "schedule": "0 0 1 * *"
    },
    {
      "path": "/api/cron/cleanup-db",
      "schedule": "0 2 * * 0"
    },
    {
      "path": "/api/ai/conversations/cleanup",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/cron/archive-expired-knowledge",
      "schedule": "0 4 * * *"
    },
    {
      "path": "/api/cron/cleanup-blobs",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/process-music-stems",
      "schedule": "*/2 * * * *"
    },
    {
      "path": "/api/cron/process-youtube-downloads",
      "schedule": "* * * * *"
    }
  ]
