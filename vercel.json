{
  "installCommand": "npm install --include=optional",
  "buildCommand": "npm run build",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 60
    },
    "app/api/upload/route.ts": {
      "maxDuration": 120,
      "maxRequestBodySize": 52428800
    },
    "app/api/cms/media/upload/route.ts": {
      "maxDuration": 120,
      "maxRequestBodySize": 52428800
    },
    "app/api/projects/[projectId]/elements/route.ts": {
      "maxDuration": 120,
      "maxRequestBodySize": 52428800
    },
    "app/api/projects/[projectId]/fonts/route.ts": {
      "maxDuration": 120,
      "maxRequestBodySize": 52428800
    },
    "app/api/projects/[projectId]/logos/route.ts": {
      "maxDuration": 120,
      "maxRequestBodySize": 52428800
    },
    "app/api/video-processing/process/route.ts": {
      "maxDuration": 300
    },
    "app/api/ai/chat/route.ts": {
      "maxDuration": 120
    },
    "app/api/ai/image/route.ts": {
      "maxDuration": 120
    },
    "app/api/ai/generate-image/route.ts": {
      "maxDuration": 120
    },
    "app/api/admin/knowledge/[id]/reindex/route.ts": {
      "maxDuration": 120
    },
    "app/api/projects/[projectId]/generations/carousel/route.ts": {
      "maxDuration": 300
    },
    "app/api/admin/users/sync/route.ts": {
      "maxDuration": 300
    },
    "app/api/projects/route.ts": {
      "maxDuration": 60
    },
    "app/api/organizations/[orgId]/analytics/route.ts": {
      "maxDuration": 60
    },
    "app/api/organizations/[orgId]/analytics/timeline/route.ts": {
      "maxDuration": 60
    },
    "app/api/organizations/[orgId]/analytics/members/route.ts": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/posts",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/cron/check-stuck-posts",
      "schedule": "*/10 * * * *"
    },
    {
      "path": "/api/cron/refill-org-credits",
      "schedule": "0 0 1 * *"
    },
    {
      "path": "/api/cron/cleanup-db",
      "schedule": "0 2 * * 0"
    },
    {
      "path": "/api/ai/conversations/cleanup",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/cron/cleanup-blobs",
      "schedule": "0 2 * * *"
    }
  ]
}
